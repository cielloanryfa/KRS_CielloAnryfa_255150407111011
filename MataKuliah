public class MataKuliah {
    private final String kode;
    private final String nama;
    private final int sks;

    public MataKuliah(String kode, String nama, int sks) {
        if (kode == null || kode.trim().isEmpty()) throw new IllegalArgumentException("Kode mata kuliah tidak boleh kosong");
        if (nama == null || nama.trim().isEmpty()) throw new IllegalArgumentException("Nama mata kuliah tidak boleh kosong");
        if (sks <= 0) throw new IllegalArgumentException("SKS harus lebih besar dari 0");
        this.kode = kode.trim().toUpperCase();
        this.nama = nama.trim();
        this.sks = sks;
    }

    public String getKode() {
        return kode;
    }

    public String getNama() {
        return nama;
    }

    public int getSks() {
        return sks;
    }

    @Override
    public String toString() {
        return String.format("%-12s | %-30s | %2d", kode, nama, sks);
    }
}
